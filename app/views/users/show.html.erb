<h1><%= @user.username %>'s events</h1>

<div><% @user.created_events.each do |e| %></div>
    <h2>Event</h2>
    <div><%= e.title %></div>
    <div><%= e.body %></div>
    <strong><%= e.date %></strong>
    <div><%= e.location %></div>
    <div><%= link_to "Edit event", edit_event_path(e.id) %>
    <div><%= link_to "Delete event", event_path(e), data: { turbo_method: :delete,
                                                            turbo_confirm: "Are you sure?"
                                                            } %>
    <% end %>


<h2> Events attended</h2>
<ul>
<div><% @user.attended_events.past.each do |e| %></div>
    <li><%= e.title %></li>
    <div><%= e.date %></div><br>
<% end %>
</ul>

<h2> Events to attend</h2>
<ul>
<div><% @user.attended_events.future.each do |e| %></div>
    <li><%= e.title %></li>
    <div><%= e.date %></div><br>
<% end %>
</ul>

<div><%= link_to "Back to home", root_path%></div>

<h1><%= @event.title %></h1>
<div><%= @event.creator.username %></div>
<div><%= @event.date %></div>
<div><%= @event.location %></div>
<strong> Attendees </strong>
<ul>
<div><% @event.attendees.each do |a| %></div>
        <li><%= a.username %></li>
    <% end %>
</ul>
<% if Date.parse(@event.date) > Date.today %>
    <div><%= render "event_attendings/form"%></div><br>
<% end %>

<div><%= link_to "Back to home", root_path%></div>
